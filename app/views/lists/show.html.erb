<p id="notice"><%= notice %></p>

<p class="neon-info">
  <%= @list.name %>
</p>

<p class="neon-info">
  <%= @list.style %>
</p>

<p class="neon-info">
  Link: <%= @list.link %>
</p>

<p class="neon-info">
  Description:
  <%= @list.content %>
</p>

<div id="list-photo">
  <div>
    Photo of the list..
  </div>
  <div>
    <%= cl_image_tag @list.photo.key, height: 432, width: 532, crop: :fit %>
  </div>
</div>

<div id="list-info">
  <h1 class="neon-info-big"><%= @list.name %></h1>
  <h3 class="neon-info-big"><%= @list.style %></h3>
</div>

<div class="item">
  <iframe width="560" height="315" src="<%= @list.link %>"
  frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
</div>

<p class="neon-info">Made by <%= @list.user.name %> with love!</p>

<p class="neon-info">
  <%= link_to 'Edit', edit_list_path(@list) %> |
  <%= link_to 'Back', root_path %>
</p>


<% unless @list.user == current_user %>
  <%= link_to "Created by #{@list.user.name}", dashboard_path(@list.user.id)%>
<% end %>
